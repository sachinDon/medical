        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:gravity="center"
        android:textColor="@color/colordarkblue"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/text_bank_accno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bankholdername"
        android:text="Account No.: "
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_semibold"
        android:gravity="center"
        android:textColor="@color/colorblack"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_bank_accno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bankholdername1"
        android:layout_toEndOf="@+id/text_bank_accno"
        android:text="0030838723698"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:gravity="center"
        android:textColor="@color/colordarkblue"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/text_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_bank_name1"
        android:layout_below="@+id/text_bank_accno1"
        android:text="State bank of India "
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:gravity="center"
        android:textColor="@color/colordarkblue"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/text_bank_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bank_accno"
        android:text="Bank Name: "
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_semibold"
        android:gravity="center"
        android:textColor="@color/colorblack"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_bank_ifsc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bank_name"
        android:text="IFSC Code: "
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_semibold"
        android:gravity="center"
        android:textColor="@color/colorblack"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_bank_ifsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_bank_ifsc1"
        android:layout_below="@+id/text_bank_name"
        android:text="SBIN002170"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:gravity="center"
        android:textColor="@color/colordarkblue"
        android:layout_marginStart="3dp"/>
    <TextView
        android:id="@+id/text_bank_mob1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bank_ifsc1"
        android:text="Mobile No.: "
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_semibold"
        android:gravity="center"
        android:textColor="@color/colorblack"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_bank_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_bank_mob1"
        android:layout_below="@+id/text_bank_ifsc"
        android:text="8850519524"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:gravity="center"
        android:textColor="@color/colordarkblue"
        android:layout_marginStart="3dp"/>

</RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_mobilepay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="invisible"
            android:background="@color/colorwhite"
            android:layout_below="@+id/relative_details">

            <TextView
                android:id="@+id/text_banks_title_mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Pay Details:"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/sanfranciscodisplay_semibold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/text_mobilepay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_banks_title_mob"
                android:text="Mobile No.: "
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/sanfranciscodisplay_semibold"
                android:gravity="center"
                android:textColor="@color/colorblack"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/text_mobilepay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_banks_title_mob"
                android:layout_toEndOf="@+id/text_mobilepay1"
                android:text="8850519524"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:gravity="center"
                android:textColor="@color/colordarkblue"
                android:layout_marginStart="3dp"/>


        </RelativeLayout>

</RelativeLayout>
        </ScrollView>
    <ProgressBar
        android:id="@+id/progress_online_act"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
     </RelativeLayout>


