<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/relative_dorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_listarrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/exparrow"
        android:rotation="270"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text_order_name_d"
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/text_listarrow"
        android:layout_height="wrap_content"
        android:text="Name: Sachin Mokashi"
        android:lines="1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_orderid"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/sanfranciscodisplay_semibold"/>

    <TextView
        android:id="@+id/text_orderid_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/text_listarrow"
        android:layout_marginStart="15dp"
        android:text="Order_id: ffdffff"
        android:layout_below="@+id/text_order_name_d"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/sanfranciscodisplay_medium"/>

    <TextView
        android:id="@+id/text_order_total_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total amount: Rs 1010"
        android:lines="1"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/text_orderid_d"
        android:textSize="16sp"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/sanfranciscodisplay_medium"/>

</RelativeLayout>

 <LinearLayout
     android:id="@+id/linear_divs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/relative_dorder"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_oeder_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_green1"
                    android:text="Accept"
                    android:paddingLeft="20dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    android:textSize="16sp"
                    android:textColor="@color/colorwhite"
                    android:fontFamily="@font/sanfranciscodisplay_medium"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_order_cancel_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="20dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/round_red"
                    android:textSize="16sp"
                    android:textColor="@color/colorwhite"
                    android:fontFamily="@font/sanfranciscodisplay_medium"/>
            </RelativeLayout>

        </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/linear_divs"
    android:background="@color/colorlightgray1"
    />






    </RelativeLayout>

</RelativeLayout>