<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorshadedblue">


    <RelativeLayout
        android:id="@+id/relative_prof_change"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorshadedblue">
        <TextView
            android:id="@+id/text_back_chnage_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
            android:text="Change Password"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textColor="@color/colorwhite"
            />

        <TextView
            android:id="@+id/text_back_chnage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="Back"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textColor="@color/colorwhite"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorlightgray"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_prof_change">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <EditText
                    android:id="@+id/edit_change_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="18dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="text|textNoSuggestions"
                    android:hint="Enter Mobile Number"
                    android:background="@drawable/blackline_border"/>

                <EditText
                    android:id="@+id/edit_change_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_below="@+id/edit_change_email"
                    android:hint="Enter old pasword"
                    android:background="@drawable/blackline_border"/>


                <EditText
                    android:id="@+id/edit_change_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_below="@+id/edit_change_oldpass"
                    android:hint="Enter new password"
                    android:background="@drawable/blackline_border"/>

                <EditText
                    android:id="@+id/edit_change_confirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_below="@+id/edit_change_newpass"
                    android:hint="Enter confirm password"
                    android:background="@drawable/blackline_border"/>

                <TextView
                    android:id="@+id/text_change_save"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/edit_change_confirmpass"
                    android:text="Save"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:textColor="@color/colorblack"
                    android:background="@drawable/round_lightgray"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>



        </ScrollView>

    </RelativeLayout>


</RelativeLayout>

