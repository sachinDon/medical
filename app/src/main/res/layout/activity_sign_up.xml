                android:textSize="15sp"
                android:singleLine="true"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:background="@drawable/shapeemail"
                android:drawableLeft="@drawable/ic_folder_shared_black_24dp"
                android:drawablePadding="10dp"
                android:hint="GST No"
                android:visibility="visible"
                android:layout_below="@+id/edittext_signup_pincode"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/colorwhite"
                android:textColorHighlight="@color/colorwhite"/>

        <RelativeLayout
            android:id="@+id/relative_signup_idprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/shapeemail"
            android:layout_below="@+id/edittext_signup_fdno">

            <TextView
                android:id="@+id/text_signup_idprof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Select ID proof"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:textColor="@color/colorwhite"/>

        </RelativeLayout>


    <EditText
        android:id="@+id/edittext_signup_gstno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="15sp"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:singleLine="true"

        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_call_to_action_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Type here..."
        android:visibility="invisible"
        android:layout_below="@+id/edittext_signup_fdno"
        android:textColor="@color/colorwhite"
        android:textColorHint="@color/colorwhite"
        android:textColorHighlight="@color/colorwhite"/>



    <TextView
        android:id="@+id/text_login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:fontFamily="@font/sanfranciscodisplay_medium"
        android:textSize="20sp"
        android:shadowColor="@android:color/transparent"
        android:padding="12dp"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/edittext_signup_gstno"
        android:background="@drawable/shapesignup"
        android:textColor="@color/colorwhite"/>

